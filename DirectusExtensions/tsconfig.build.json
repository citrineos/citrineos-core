{
  "exclude": ["**/*.test.ts", "**/*.stub.ts", "node_modules", "**/__tests__/*", "dist"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true
  }
}
